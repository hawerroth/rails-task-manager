<%= simple_form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.input :title %>
  </div>
  <div class="form-group">
    <%= f.input :details %>
  </div>

  <% unless f.object.new_record? %>
    <div class="checkbox ">
      <label>
        <%= f.check_box :completed %> Completed
      </label>
    </div>
  <% end %>
  <%= f.submit class: "btn btn-primary my-3 fs-4"%>
<% end %>
